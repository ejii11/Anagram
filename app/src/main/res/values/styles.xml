<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/LightPink</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/LOL_greenblue</item>
        <!-- colorAccent is used as the default value for widgets -->
        <item name="colorAccent">@color/white</item>
        <!-- Default color of the text in your views  -->
        <item name="android:textColorPrimary">@color/LightCoral</item>
        <item name="android:navigationBarColor">@color/LOL_greenblue</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
